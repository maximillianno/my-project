{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {#{{ form_widget(form) }}#}
    {#<button class="btn">{{ button_label|default('Save') }}</button>#}
    {{ form_end(form) }}
    <h1>Search results:</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Category</th>
            <th>Created</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.body }}</td>
                <td>{{ page.category }}</td>
                <td>{{ page.created ? page.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}