{% extends 'base.html.twig' %}

{% block stylesheets %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('build/base/default.css') }}">
    <link rel="stylesheet" href="{{ asset('build/base/form.css') }}">
    <link rel="stylesheet" href="{{ asset('build/base/typography.css') }}">
    <link rel="stylesheet" href="{{ asset('build/components/page.css') }}">
    <link rel="stylesheet" href="{{ asset('build/components/header.css') }}">
    <link rel="stylesheet" href="{{ asset('build/components/footer.css') }}">
{% endblock %}

{% block body %}
    <div class="page-wrap">
        <div class="page">
            <header class="header" id="header">
                <div class="region region-header">
                    {% block header %}{% endblock %}
                </div>
            </header>
            <div class="main-wrap">
                <aside class="sidebar sidebar-left">
                    <div class="region region-sidebar-left">
                        {% block sidebar_left  %}{% endblock %}
                    </div>
                </aside>
                <main id="main" class="main">
                    <div class="region region-main">
                        <div class="block block-title-page">
                            <h1 id="page_title">{% block page_title  %}{% endblock %}</h1>
                        </div>
                        {% block main  %}{% endblock %}
                    </div>
                </main>
            </div>
            <footer class="footer" id="footer">
                <div class="footer-top">
                    <div class="region region-footer-top">
                        {% block footer_top  %}{% endblock %}
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="region region-footer-bottom">
                        {% block footer_bottom  %}{% endblock %}
                    </div>
                </div>
            </footer>
        </div>
    </div>

{% endblock %}